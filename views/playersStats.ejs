<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" href="./images/basketball.png" />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.9.2/dist/umd/popper.min.js"></script>
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.1/dist/js/bootstrap.min.js"
      integrity="sha384-Atwg2Pkwv9vp0ygtn1JAojH0nYbwNJLPhwyoVbhoPwBhjQPR5VtM2+xf0Uwh9KtT"
      crossorigin="anonymous"
    ></script>
    <title>Select a Team</title>
  </head>

  <!-- The body of the Player Stats -->
  <body>
    <div class="container">
      <!-- NAVIGATION -->
      <nav class="navbar navbar-light bg-light justify-content-start">
        <a class="navbar-brand border p-2 bg-primary text-light" href="/"
          >Home</a
        >
        <a class="navbar-brand border p-2 bg-primary text-light" href="/games"
          >Games CRUD (Michael Chang)</a
        >
        <a
          class="navbar-brand border p-2 bg-primary text-light"
          href="/employees"
          >Players CRUD (Daniel Lisko)</a
        >
        <a
          class="navbar-brand border p-2 bg-primary text-light"
          href="/teamStats"
          >Team Stats CRUD (Michael Chang)</a
        >
        <a
          class="navbar-brand border p-2 bg-primary text-light"
          href="/playersStats"
          >Player Stats CRUD (Daniel Lisko)</a
        >
      </nav>

      <!-- Form to select a team -->
      <h2>Select a Team</h2>
      <div class="row">

        <form action="/playersStats/team" method="GET">
          <ul class="dropdown-menu" aria-labelledby="dropdownMenuButton1">
            <% teams.forEach(function (f) { %>
            <a class="dropdown-item" href="playersStats/team/<%= f.name %>"
              ><%= f.abbreviation %> - <%= f.name %></a
            >
          </ul>
          <% })%>
        </form>
      </div>
    </div>
  </body>
</html>
